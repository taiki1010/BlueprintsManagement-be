<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Portfolio.BlueprintsManagement.infrastructure.db.mapper">

    <resultMap id="siteResultMap" type="Portfolio.BlueprintsManagement.domain.model.Site">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <select id="existSite">
        select exists(select * from sites where is_deleted = 0)
    </select>

    <select id="getSites" resultMap="siteResultMap">
        select *
        from sites
        where is_deleted = 0
    </select>

</mapper>
